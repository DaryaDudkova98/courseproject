{% extends 'base.html.twig' %}

{% if app is defined %}
    {% form_theme requestForm 'bootstrap_5_layout.html.twig' %}
{% endif %}

{% block title %}Reset your password{% endblock %}

{% block body %}
<div class="d-flex align-items-center justify-content-center vh-100 bg-body-tertiary">
    <main class="form-signin border rounded shadow bg-white p-4" style="max-width: 400px; width: 100%;">
        <div class="text-center mb-4">
            <h1 class="h3 mt-3 mb-3 fw-normal">Reset your password</h1>
            <p class="text-muted small">Enter your email address and weâ€™ll send you a link to reset your password.</p>
        </div>

        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        {% if app is defined %}
            {{ form_start(requestForm, {'attr': {'novalidate': 'novalidate'}}) }}
        {% else %}

            <form method="post" action="{{ path('app_forgot_password_request') }}" novalidate>
        {% endif %}

        <div class="form-floating mb-3">
            {% if app is defined %}
                {{ form_widget(requestForm.email, {'attr': {'placeholder': 'Email', 'class': 'form-control'}}) }}
                <label for="{{ requestForm.email.vars.id }}">Email address</label>
                {{ form_errors(requestForm.email) }}
            {% else %}
                <input type="email" name="email" class="form-control" id="email" placeholder="Email" required>
                <label for="email">Email address</label>
            {% endif %}
        </div>

        <button class="btn btn-primary w-100 py-2" type="submit">Send password reset email</button>

        {% if app is defined %}
            {{ form_end(requestForm) }}
        {% else %}
            </form>
        {% endif %}

        <div class="d-flex justify-content-between mt-4 text-muted small">
            <div>
                <a href="{{ path('app_login') }}">Back to login</a>
            </div>
            <div>
                <a href="{{ path('app_register') }}">Create account</a>
            </div>
        </div>
    </main>
</div>
{% endblock %}
