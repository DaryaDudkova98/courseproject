{% extends '@EasyAdmin/layout.html.twig' %}

{% block head_stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
{% endblock %}

{% block head_favicon %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}">
{% endblock %}

{% block header %}
    <header id="header" class="main-header">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('admin') }}">
                    <i class="bi bi-speedometer2 me-2"></i>
                    <span>{{ ea.dashboardTitle|raw }}</span>
                </a>

                <div class="d-flex align-items-center">

                    <form method="post" action="{{ path('app_change_locale') }}" class="me-3">
                        <input type="hidden" name="_token" value="{{ csrf_token('change_locale') }}">
                        <select name="locale" onchange="this.form.submit()"
                                class="form-select form-select-sm bg-light text-dark border-light">
                            <option value="en" {{ app.request.locale == 'en' ? 'selected' : '' }}>
                                ðŸ‡ºðŸ‡¸ EN
                            </option>
                            <option value="es" {{ app.request.locale == 'es' ? 'selected' : '' }}>
                                ðŸ‡ªðŸ‡¸ ES
                            </option>
                        </select>
                    </form>

                    <form method="get" action="{{ path('search') }}" class="me-3">
                        <div class="input-group input-group-sm">
                            <input type="text" name="q" placeholder="Search..." class="form-control">
                            <button type="submit" class="btn btn-outline-light">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </form>

                    {% if app.user %}
                        <div class="dropdown">
                            <button class="btn btn-outline-light btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">   
                                {{ app.user.email }}
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="{{ path('homepage') }}">
                                    <i class="bi bi-globe me-2"></i>Website
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger" href="{{ path('app_logout') }}">
                                    <i class="bi bi-box-arrow-right me-2"></i>Logout
                                </a></li>
                            </ul>
                        </div>
                    {% endif %}
                </div>
            </div>
        </nav>
    </header>
{% endblock %}

{% block content %}
    <div class="content-wrapper">
        {{ ea_menu() }}

        <div class="content">
            {{ include(ea.templatePath('layout')) }}
        </div>
    </div>
{% endblock %}

{% block body_javascript %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}